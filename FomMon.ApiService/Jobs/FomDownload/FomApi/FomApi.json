        ]
      },
      "ProjectResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "commentingOpenDate": {
            "type": "string",
