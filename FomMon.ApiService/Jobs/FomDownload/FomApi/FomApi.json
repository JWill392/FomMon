            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "openedOnOrAfter",
            "required": false,
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
                "schema": {
