            "type": "number"
          },
          "name": {
            "type": "string"
          },
          "geometry": {
            "$ref": "#/components/schemas/Geometry"
          },
          "centroid": {
            "$ref": "#/components/schemas/Point"
          },
          "plannedDevelopmentDate": {
            "type": "string",
            "format": "date",
            "description": "Format: YYYY-MM-DD"
          },
          "plannedAreaHa": {
            "type": "string",
            "description":  "JW: Mistakenly sent as string; original spec is number"
          },
          "plannedLengthKm": {
            "type": "string",
            "description": "JW: Mistakenly sent as string; original spec is number"
          },
