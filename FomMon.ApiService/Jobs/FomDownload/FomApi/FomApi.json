          },
          "commentingClosedDate": {
            "type": "string",
            "format": "date",
            "description": "ISO-formatted date"
          },
          "validityEndDate": {
            "type": "string",
            "format": "date",
            "description": "ISO-formatted date"
          },
          "projectPlanCode": {
            "type": "string"
          },
          "fspId": {
            "type": "number"
          },
          "woodlotLicenseNumber": {
            "type": "string"
          },
          "district": {
